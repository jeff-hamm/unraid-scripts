# Copilot System Monitor Configuration Template
# Copy this to .env and customize for your system

# Paths
APP_ROOT=/mnt/pool/appdata
APP_NAME=copilot-system-monitor
APP_PATH=${APP_ROOT}/${APP_NAME}
PHOME=/mnt/pool/appdata/home
STATE_DIR=${PHOME}/docs/projects/copilot-system-monitor

# Copilot Configuration
COPILOT_MODEL=claude-sonnet-4.5
COPILOT_VERSION=

# Auth tokens (loaded from /root/.auth files if empty)
GH_TOKEN=
HA_TOKEN=
IMMICH_API_KEY=

# Home Assistant VM (optional)
HA_VM_NAME=
HA_URL=

# Git Config (for commits by the agent)
GIT_AUTHOR_NAME="Copilot Agent"
GIT_AUTHOR_EMAIL=copilot@users.noreply.github.com
GIT_COMMITTER_NAME="Copilot Agent"
GIT_COMMITTER_EMAIL=copilot@users.noreply.github.com

# FileBrowser for analysis file links (optional)
FILEBROWSER_BASE_URL=
FILEBROWSER_ANALYSIS_PATH=
